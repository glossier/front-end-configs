{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "max-len": ["error", 100],
    "prefer-const": "error",
    "no-var": "error"
  },
  "env": {
    "mocha": true,
    "jest": true
  },
  "plugins": [
    "jsx-a11y"
  ]
}
