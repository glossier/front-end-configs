{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "max-len": ["error", 100],
    "prefer-const": "error",
    "no-var": "error",
    "jsx-a11y/label-has-for": [
      2,
      {
        "required": {
          "every": ["id"]
        }
      }
    ],
    "jsx-a11y/no-autofocus": 0,
    "react-hooks/rules-of-hooks": "error"
  },
  "env": {
    "mocha": true,
    "jest": true
  },
  "plugins": ["jsx-a11y", "react-hooks"]
}
